<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ImageView for displaying the selected or loaded image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_view_description"
        android:background="#E0E0E0" />

    <!-- Button to select an image from the gallery -->
    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:text="Select Image" />

    <!-- Button to upload the selected image -->
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/selectImageButton"
        android:layout_alignBaseline="@id/selectImageButton"
        android:layout_marginStart="16dp"
        android:text="Upload Image" />

    <!-- Button to load the latest image URL -->
    <Button
        android:id="@+id/loadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectImageButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text="Load Latest Image" />

</RelativeLayout>
